# Application Environment
NODE_ENV=development
API_VERSION=1.0.0

# Server Configuration
BACKEND_PORT=3000
FRONTEND_PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=pmuser
DB_PASSWORD=pmpassword
DB_NAME=privacymark_db
DATABASE_URL=postgresql://pmuser:pmpassword@localhost:5432/privacymark_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRY=24h
SESSION_SECRET=your-session-secret-change-this

# API Keys (Optional - for AI features)
OPENAI_API_KEY=your-openai-api-key
CLAUDE_API_KEY=your-claude-api-key

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Email Configuration (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@privacy-mark-chatbot.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# External Services
JIPDEC_API_URL=https://api.privacymark.jp/v1
JIPDEC_API_KEY=your-jipdec-api-key

# Feature Flags
ENABLE_AI_RESPONSES=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_ANALYTICS=false

# Development Settings
DEBUG=false
MOCK_API_RESPONSES=false